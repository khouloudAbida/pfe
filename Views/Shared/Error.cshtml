@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
    Layout = null;
}
<head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1" name="viewport" />
    <title>Error</title>
    <!-- Favicon-->
    <link rel="icon" href="../../assets/images/favicon.ico" type="image/x-icon">
    <!-- Plugins Core Css -->
    <link href="../../assets/css/app.min.css" rel="stylesheet">
    <!-- Custom Css -->
    <link href="../../assets/css/style.css" rel="stylesheet" />
    <link href="../../assets/css/pages/extra_pages.css" rel="stylesheet" />
</head>




<body>
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <form class="login100-form">
                    <span class="error-header p-b-45">
                        @Model.Code
                    </span>
                    <span class="error-subheader p-b-5">
                        @Model.Message
                    </span>
                    <span class="error-subheader2 p-b-5">
                        La page que vous recherchez n'est pas disponible !
                    </span>
                    <div class="container-login100-form-btn p-t-30	">


                        <button class="login100-form-btn" asp-area="" asp-controller="Auth" asp-action="Index" >

                            Aller à la page d'accueil
                        </button>
                    </div>
                    @*<div class="w-full p-t-15 p-b-15 text-center">
                        <div>
                            <a href="#" class="txt1">
                                Need Help?
                            </a>
                        </div>
                    </div>*@
                </form>
                <div class="login100-more" style="background-image: url('../../assets/images/pages/bg-03.png');">
                </div>
            </div>
        </div>
    </div>
    <!-- Plugins Js -->
    <script src="../../assets/js/app.min.js"></script>
    <!-- Extra page Js -->
    <script src="../../assets/js/pages/examples/pages.js"></script>
