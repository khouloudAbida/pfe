@model EmployeeApplication.Models.Conge

@{
    ViewData["Title"] = "Create";
}
<section class="content">
    <div class="container-fluid">
        <div class="block-header">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <ul class="breadcrumb breadcrumb-style ">
                        <li class="breadcrumb-item">
                            <h4 class="page-title">Nouvelle demande de congé</h4>
                        </li>
                       
                        <li class="breadcrumb-item bcrumb-2">
                            <a href="#" onClick="return false;">Gestion des Congés</a>
                        </li>
                        <li class="breadcrumb-item active">Nouvelle demande de congé</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="header">
                        <h2>
                            <strong>Ajouter un congé</strong>
                        </h2>
                   
                    </div>
                    <div class="body">
                        <form asp-action="Create">
                            @if (@ViewBag.Error != null)
                            {
                                <div class="alert alert-danger" role="alert">
                                    @ViewBag.Error
                                </div>
                            }
                            <div class="row clearfix">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <select asp-for="TypeCongeID" asp-items="ViewBag.Types" class="col-12 form-control">

                                            <option value="">Choisir le type</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="row clearfix">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <div class="form-group">

                                            <input type="datetime-local" asp-for="DU" class="form-control datetimepicker"
                                                   placeholder="Partir de la date">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <input type="datetime-local" asp-for="AU" class="form-control datetimepicker" placeholder="à ce jour">
                                    </div>
                                </div>
                            </div>
                            <div class="row clearfix">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <div class="form-line">
                                            <textarea rows="4" asp-for="Notes" class="form-control no-resize"
                                                      placeholder="Notes"></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12 p-t-20 text-center">
                                <input type="submit" value="Enregistrer" class="btn btn-primary waves-effect m-r-15" />
                                <button asp-action="Index" type="submit" class="btn btn-danger waves-effect">Annuler</button>
                            </div>
                        </form>
</div>
                </div>
            </div>
        </div>
    </div>
</section>
