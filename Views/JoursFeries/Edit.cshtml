<section class="content">
    <div class="container-fluid">
        <div class="block-header">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <ul class="breadcrumb breadcrumb-style ">
                        <li class="breadcrumb-item">
                            <h4 class="page-title">Nouvelle Jour Férie</h4>
                        </li>

                        <li class="breadcrumb-item bcrumb-2">
                            <a href="#" onClick="return false;">Gestion des Jours Féries</a>
                        </li>
                        <li class="breadcrumb-item active">Nouvelle des Jours Féries</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="header">
                        <h2>
                            <strong>Ajouter un congé</strong>
                        </h2>

                    </div>
                    <div class="body">
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="ID" />
                            @if (@ViewBag.Error != null)
                            {
                                <div class="alert alert-danger" role="alert">
                                    @ViewBag.Error
                                </div>
                            }
                            <div class="row clearfix">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <select asp-for="ISAllYear" class="col-12 form-control">

                                            <option selected value="1">Oui</option>
                                            <option value="0">Non</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="row clearfix">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <div class="form-group">

                                            <input type="number" asp-for="Annee" class="form-control datetimepicker"
                                                   placeholder="Anne">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <input type="number" asp-for="Month" class="form-control datetimepicker" placeholder="Mois">
                                    </div>
                                </div>
                            </div>
                            <div class="row clearfix">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <div class="form-line">
                                            <input type="number" asp-for="Day" class="form-control no-resize"
                                                   placeholder="Jour" />
                                        </div>
                                    </div>
                                </div>

                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <div class="form-line">
                                            <input type="number" asp-for="NbJours" class="form-control no-resize"
                                                   placeholder="Nombres du jours" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12 p-t-20 text-center">
                                <input type="submit" value="Enregistrer" class="btn btn-primary waves-effect m-r-15" />
                                <button asp-action="Index" type="submit" class="btn btn-danger waves-effect">Annuler</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
