@model EmployeeApplication.Models.Contrat

@{
    ViewData["Title"] = "Create";
}

<section class="content">
    <div class="container-fluid">
        <div class="block-header">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <ul class="breadcrumb breadcrumb-style ">
                        <li class="breadcrumb-item">
                            <h4 class="page-title">Nouvelle Contrat</h4>
                        </li>

                        <li class="breadcrumb-item bcrumb-2">
                            <a href="#" onClick="return false;">Gestion des Contrats </a>
                        </li>
                        <li class="breadcrumb-item active">Nouvelle des Contrats </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="header">
                        <h2>
                            <strong>
                                Ajouter Contrat
                            </strong>
                        </h2>

                    </div>
                    <div class="body">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <select asp-for="EmployeeID" asp-items="ViewBag.employees" class="col-12 form-control">

                                    <option value="">Choisir le Employee</option>
                                </select>
                            </div>
                            <div class="row clearfix">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <div class="form-group">
                                            <label asp-for="type" class="control-label"></label>
                                            <input asp-for="type" class="form-control" />
                                            <span asp-validation-for="type" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="SalaireBrut" class="control-label"></label>
                                    <input asp-for="SalaireBrut" class="form-control" />
                                    <span asp-validation-for="SalaireBrut" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row clearfix">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <div class="form-group">
                                            <label asp-for="SalaireNet" class="control-label"></label>
                                            <input asp-for="SalaireNet" class="form-control" />
                                            <span asp-validation-for="SalaireNet" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="form-group">
                                        <label asp-for="PrimeDeMois" class="control-label"></label>
                                        <input asp-for="PrimeDeMois" class="form-control" />
                                        <span asp-validation-for="PrimeDeMois" class="text-danger"></span>
                                    </div>
                                </div>

                            </div>
                            <div class="col-lg-12 p-t-20 text-center">
                                <input type="submit" value="Enregistrer" class="btn btn-primary waves-effect m-r-15" />
                                <button asp-action="Index" type="submit" class="btn btn-danger waves-effect">Annuler</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}




