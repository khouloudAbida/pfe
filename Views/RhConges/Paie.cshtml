@model IEnumerable<EmployeeApplication.Models.FichePaie>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<section class="content">
    <div class="container-fluid">
        <div class="block-header">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <ul class="breadcrumb breadcrumb-style ">
                        <li class="breadcrumb-item">
                            <h4 class="page-title">liste des Salaires </h4>
                        </li>

                        <li class="breadcrumb-item bcrumb-2">
                            <a href="#" onClick="return false;">Gestions des paie </a>
                        </li>
                        <li class="breadcrumb-item active">liste des Salaires </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="card">
                    <div class="header">
                        <h2>
                            <strong>Tous les salaires </strong>
                        </h2>
                    </div>
                    <div class="body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Annee)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Mois)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.prime)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Montant)
                                        </th>

                                        <th>
                                            @Html.DisplayNameFor(model => model.Employee.Nom)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Employee.Prenom)
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                
                                    @foreach (var item in Model)
                                    {
                                    <tr class="odd gradeX">

                                        <td class="center">
                                            @Html.DisplayFor(modelItem => item.Annee)
                                        </td>
                                        <td class="center">
                                            @Html.DisplayFor(modelItem => item.Mois)
                                        </td>
                                        <td class="center">
                                            @Html.DisplayFor(modelItem => item.prime)
                                        </td>
                                        <td class="center">
                                            @Html.DisplayFor(modelItem => item.Montant)
                                        </td>
                                        <td class="center">
                                            @Html.DisplayFor(modelItem => item.Employee.Nom)
                                        </td>
                                        <td class="center">
                                            @Html.DisplayFor(modelItem => item.Employee.Prenom)
                                        </td>

                                     
                                    </tr>

                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

